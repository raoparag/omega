<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.srt.omega.web.contact.ContactBrowse"
        focusComponent="table"
        lookupComponent="table"
        messagesPack="com.srt.omega.web.contact">
    <dsContext>
        <datasource id="contactDs"
                    class="com.srt.omega.entity.Contact"
                    view="contact-view"/>
        <groupDatasource id="contactsDs"
                         class="com.srt.omega.entity.Contact"
                         view="contact-view">
            <query>
                <![CDATA[select e from omega$Contact e]]>
            </query>
        </groupDatasource>
        <collectionDatasource id="organisationsDs"
                              class="com.srt.omega.entity.Organisation"
                              view="_minimal">
            <query>
                <![CDATA[select e from omega$Organisation e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="save"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                description="Esc"
                icon="icons/cancel.png"
                invoke="cancel"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split"
               height="100%"
               orientation="horizontal"
               reversePosition="true"
               width="100%">
            <vbox id="lookupBox"
                  expand="table"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <filter id="filter"
                        applyTo="table"
                        datasource="contactsDs">
                    <properties include=".*"/>
                </filter>
                <groupTable id="table"
                            width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                        <action id="excel"/>
                    </actions>
                    <columns>
                        <column id="firstName"/>
                        <column id="lastName"/>
                        <column id="email"/>
                        <column id="phone"/>
                        <column id="jobTitle"/>
                        <column id="birthdate"/>
                        <column id="pdpa"/>
                        <column id="notes"/>
                        <column id="organisation"/>
                    </columns>
                    <rows datasource="contactsDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="table.create"/>
                        <button id="editBtn"
                                action="table.edit"/>
                        <button id="removeBtn"
                                action="table.remove"/>
                        <button id="export"
                                action="table.excel"
                                caption="Export"/>
                    </buttonsPanel>
                </groupTable>
            </vbox>
            <vbox id="editBox"
                  expand="fieldGroupBox"
                  height="100%"
                  margin="false,false,false,true"
                  spacing="true">
                <scrollBox id="fieldGroupBox">
                    <fieldGroup id="fieldGroup"
                                datasource="contactDs">
                        <column width="250px">
                            <field property="firstName"/>
                            <field property="lastName"/>
                            <field property="email"/>
                            <field property="phone"/>
                            <field property="jobTitle"/>
                            <field property="birthdate"/>
                            <field property="pdpa"/>
                            <field property="notes"/>
                            <field optionsDatasource="organisationsDs"
                                   property="organisation"/>
                        </column>
                    </fieldGroup>
                </scrollBox>
                <hbox id="actionsPane"
                      spacing="true"
                      visible="false">
                    <button id="saveBtn"
                            action="save"/>
                    <button id="cancelBtn"
                            action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
